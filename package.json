{
  "name": "sass-indented",
  "displayName": "Sass",
  "description": "Indented Sass syntax Highlighting, Autocomplete & Formatter",
  "version": "2.0.0",
  "private": true,
  "icon": "resources/images/sass-logo-seal.png",
  "publisher": "syler",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheRealSyler/vscode-sass-indented"
  },
  "bugs": "https://github.com/TheRealSyler/vscode-sass-indented/issues/new?assignees=TheRealSyler&labels=bug&template=bug_report.md&title=",
  "engines": {
    "vscode": "^1.40.0"
  },
  "activationEvents": [
    "onLanguage:sass",
    "onLanguage:vue"
  ],
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn build && yarn test",
    "build": "yarn build:extension && yarn build:test",
    "build:extension": "del ./dist && webpack --mode production",
    "build:test": "del ./testOut && tsc -b",
    "build:dev": "webpack --mode development",
    "test": "yarn test:syntax && yarn test:e2e:noBuild",
    "test:e2e:noBuild": "ts-node ./testOut/e2e/runTest.js",
    "test:syntax": "ts-node ./syntaxes/test/test.syntax.ts",
    "test:e2e": "yarn build && yarn test:e2e:noBuild"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "messages",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "sass",
        "aliases": [
          "Sass",
          "sass-indented"
        ],
        "extensions": [
          ".sass",
          ".sass.erb"
        ],
        "configuration": "./sass.configuration.json"
      },
      {
        "id": "sass.hover",
        "extensions": [
          ".sass.hover"
        ],
        "configuration": "./sass.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sass",
        "scopeName": "source.sass",
        "path": "./syntaxes/sass.tmLanguage.json"
      },
      {
        "language": "sass.hover",
        "scopeName": "source.sass.hover",
        "path": "./syntaxes/sass.hover.highlighting.json"
      }
    ]
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.44.0",
    "@types/webpack": "^4.41.10",
    "del-cli": "^3.0.0",
    "mocha": "^7.1.2",
    "suf-node": "^1.1.1",
    "test-grammar": "^1.0.3",
    "ts-loader": "^7.0.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "webpack": "^4.42.1",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "sass-lsp-server": "./sass-lsp-server",
    "vscode-languageclient": "^6.1.3"
  }
}
